<section class="module hero">
  <picture>
    <source media="(max-width: 768px)" srcset="{{items.0.mobile_image}}">
    <img src="{{items.0.desktop_image}}" alt="{{items.0.alt_text}}">
  </picture>
  <div class="hero-content">
    <h2>{{items.0.headline}}</h2>
    <a href="{{items.0.cta_url}}" class="btn">{{items.0.cta_text}}</a>
  </div>
</section>
